{
    "id": "scale-template-ui",
    "cpus": 0.5,
    "mem": 512,
    "disk": 0,
    "instances": 1,
    "container": {
        "docker": {
            "image": "geoint/scale-ui",
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 0
                }
            ],
            "forcePullImage": true
        },
        "type": "DOCKER"
    },
    "env": {
        "API_PREFIX": "/api",
        "AUTH_ENABLED": "true",
        "AUTH_URL": "/api/login/"
    },
    "labels": {
        "HAPROXY_GROUP": "internal,external",
        "DCOS_SERVICE_SCHEME": "http",
        "DCOS_SERVICE_NAME": "scale",
        "DCOS_SERVICE_PORT_INDEX": "0",
        "HAPROXY_0_VHOST": "scale.marathon.mesos",
        "HAPROXY_0_BACKEND_HTTP_OPTIONS": "rspadd Access-Control-Allow-Methods:\\ GET,\\ POST,\\ PUT,\\ PATCH,\\ OPTIONS,\\ DELETE\nrspadd Access-Control-Allow-Headers:\\ Origin,\\ X-Requested-With,\\ Content-Type,\\ Accept,\\ Authorization\n",
        "HAPROXY_0_BACKEND_REDIRECT_HTTP_TO_HTTPS": "true"
    },
  "healthChecks": [
    {
      "gracePeriodSeconds": 300,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "portIndex": 0,
      "timeoutSeconds": 15,
      "delaySeconds": 15,
      "protocol": "MESOS_HTTP",
      "path": "/",
      "ipProtocol": "IPv4"
    }
  ],
    "uris": []
}
