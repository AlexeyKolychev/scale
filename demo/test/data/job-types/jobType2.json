{
  "id": 2,
  "name": "sam",
  "title": "Spectral Angle Mapper",
  "version": "1.0",
  "description": "The algorithm determines the spectral similarity between two spectra by calculating the angle between the spectra.",
  "category": "spectral",
  "is_operational": true,
  "icon_code": "f0e7",
  "docker_privileged": false,
  "docker_image": "10.4.4.10:5000/sam:1.0",
  "priority": 1,
  "timeout": 30,
  "max_tries": 3,
  "cpus_required": 0.25,
  "mem_required": 512.0,
  "disk_out_const_required": 2048.0,
  "disk_out_mult_required": 0.0,
  "interface": {
    "output_data": [{
      "media_type": "image/tiff",
      "required": true,
      "type": "file",
      "name": "sam-detections"
    }],
    "shared_resources": [],
    "command_arguments": "${infile} ${job_output_dir}",
    "input_data": [{
      "media_types": ["application/octet-stream"],
      "required": true,
      "type": "file",
      "name": "geotiff"
    },{
      "media_types": ["text/csv"],
      "required": true,
      "type": "file",
      "name": "signature"
    }],
    "version": "1.0",
    "command": "./sam.sh"
  },
  "error_mapping": {}
}